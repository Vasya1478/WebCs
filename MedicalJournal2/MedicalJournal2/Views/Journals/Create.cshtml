@model MedicalJournal2.Models.Journal

@{
    ViewData["Title"] = "Create";
}

<h1>Журнал</h1>

<h4>Добавить новую запись</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfReceipt" class="control-label">Дата приёма</label>
                <input asp-for="DateOfReceipt" class="form-control" />
                <span asp-validation-for="DateOfReceipt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumberId" class="control-label">Номер карты</label>
                <select asp-for="CardNumberId" class ="form-control" asp-items="ViewBag.CardNumberId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PatientName" class="control-label">ФИО пациента</label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorNameId" class="control-label">ФИО врача</label>
                <select asp-for="DoctorNameId" class ="form-control" asp-items="ViewBag.DoctorNameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DoctorPost" class="control-label">Должность</label>
                <input asp-for="DoctorPost" class="form-control" />
                <span asp-validation-for="DoctorPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label">Услуга</label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Количество</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
